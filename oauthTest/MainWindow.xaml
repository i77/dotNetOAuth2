<Window x:Class="oauthTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="Black">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <WebBrowser x:Name="authBrowser" Width="300" Height="200" />
            <Button Width="110" Click="Authorize_Click">Authorize client</Button>
            <Button Width="110" Click="CallAPI_Click">Call API</Button>
        </StackPanel>
    </Grid>
</Window>
